{
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "biomejs.biome",
	"biome.requireConfiguration": true,
	"cSpell.import": [
		"../cspell.config.json"
	],
	"flake8.args": [
		"--max-line-length=120"
	],
	"black-formatter.args": [
		"--line-length",
		"120"
	],
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit",
		"source.organizeImports": "always",
		"source.addMissingImports": "always"
	},
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.formatOnSave": true
	},
	"files.associations": {
		".env.development": "dotenv",
		".env.dev": "dotenv",
		".env.local": "dotenv",
		".env.test": "dotenv",
		".env.deploy_preview": "dotenv",
		".env.example": "dotenv",
		".env.staging": "dotenv",
		".env.prod": "dotenv"
	},
	"cSpell.enabledFileTypes": {
		"asciidoc": true,
		"css": true,
		"git-commit": true,
		"go": true,
		"graphql": true,
		"html": true,
		"javascript": true,
		"javascriptreact": true,
		"json": true,
		"jsonc": true,
		"markdown": true,
		"plaintext": true,
		"python": true,
		"rust": true,
		"swift": true,
		"text": true,
		"typescript": true,
		"typescriptreact": true,
		"vue": true,
		"yaml": true,
		"yml": true,
		"dockercompose": true
	},
	"mypy-type-checker.args": [
		"\"--config-file=pyproject.toml\""
	]
}